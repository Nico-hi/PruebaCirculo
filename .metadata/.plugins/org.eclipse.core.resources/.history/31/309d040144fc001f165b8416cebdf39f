package contarpares;

public class ContardorPares {

	public int mostrarCantidadPares(int tipo,String nombre) {
		
		return contarPares(); ;
	}

	 	public static void contarPares() {
		int contadorPares = 0;
		for (int i = 0; i <= 10; i++) {
			if (i % 2 == 0)
				contadorPares++;
		}
		System.out.println("Hay " + contadorPares + " numeros pares del 0 al 10");
	}

	 
	


}
